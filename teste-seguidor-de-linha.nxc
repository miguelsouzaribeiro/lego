#define THRESHOLD 40
task main()
{
  SetSensor(IN_3, SENSOR_COLORRED);
  OnFwd(OUT_AC, 75);
  while (true)
  {
    if (Sensor(IN_3) > THRESHOLD)
    if (Sensor(IN_3) > THRESHOLD)
    {
      OnRev(OUT_C, 75);
      Wait(100);
      until(Sensor(IN_3) <= THRESHOLD);
      OnFwd(OUT_AC, 75);
    }
  }
}
